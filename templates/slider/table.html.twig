<div class="table table-responsive">
	<table class="table table-hover dataTable table-striped w-full" data-plugin="dataTable">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Image</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for slider in sliders %}
				<tr>
					<td>{{ slider.id }}</td>
					<td>{{ slider.title }}</td>
					<td>{{ slider.image }}</td>
					<td>
						<a href="{{ path('slider_show', {'id': slider.id}) }}">Afficher</a>
						<a href="{{ path('slider_edit', {'id': slider.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
