{% form_theme form with ['bootstrap_4_layout.html.twig'] only %}
<div class="row row-lg">
	<div class="col-xl-12 form-horizontal">
		{{ form_widget(form) }}

		{% set sn = form.vars.value.socialNetwork %}


		<div class="table-responsive">
			<table class="table table-hover table-bordered">
				<thead>
					<tr>
						<th>Reseaux sociaux</th>
						<th>Votre addresse</th>
					</tr>
				</thead>
				<tbody>
					{% for social_network in social_networks %}
						{% if sn %}


							<tr>
								<td>{{ social_network.name }}</td>
								<td>
									<input type="text" name="sn[{{social_network.name}}]" value="{{sn[social_network.name]}}" id="{{social_network.name}}" class="form-control">
								</td>

							</tr>


						{% endif %}
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<div class="form-group col-xl-12 text-right padding-top-m">
		<button class="btn btn-success" id="validateButton1">{{ button_label|default('Enregistrer') }}</button>
	</div>
</div>
