{% extends 'admin/base.html.twig' %}

{% block title %}Gallery{% endblock %}
{% block left_sidebar %}
		{{ render(controller(
        'App\\Controller\\DefaultController::left',
        { 'active' : 'gallery' }
    )) }}

{% endblock %} 
{% block page %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ gallery.image }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ gallery.alt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gallery_index') }}">back to list</a>

    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
