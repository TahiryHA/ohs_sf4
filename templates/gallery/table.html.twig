<div class="table table-responsive">
	<table class="table table-hover dataTable table-striped w-full" data-plugin="dataTable">
		<thead>
			<tr>
				<th>Id</th>
				<th>Image</th>
				<th>Alt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for gallery in galleries %}
				<tr>
					<td>{{ gallery.id }}</td>
		            <td><img src="{{ vich_uploader_asset(gallery) ? vich_uploader_asset(gallery) | imagine_filter('pub') : ''}}" alt="{{gallery.alt}}" srcset=""></td>
					<td>{{ gallery.alt }}</td>
					<td>
						<a href="{{ path('gallery_show', {'id': gallery.id}) }}">Afficher</a>
						<a href="{{ path('gallery_edit', {'id': gallery.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
